@model IEnumerable<string>

<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <span class="glyphicon glyphicon-home navbar-brand"></span>
            @Html.ActionLink("HOME", "List", new { controller = "Product" }, new { @class = "navbar-brand" })
        </div>
        <ul class="nav navbar-nav">
            @foreach (var link in Model)
            {
                <li class="@(link == ViewBag.SelectedCategory ? "active" : null)">
                    @Html.RouteLink(link, new
                {
                    controller = "Product",
                    action = "List",
                    category = link,
                    page = 1
                },
                    new { @class = link == ViewBag.SelectedCategory ? "selected" : null }
                )
                </li>
            }
        </ul>
        
        @{ Html.RenderAction("Summary", "Cart"); }
        
    </div>
</nav>

